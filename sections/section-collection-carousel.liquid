<section class="product-swiper-section page-width section">
    <div class="product-swiper-wrapper">
            <div class="section-resource-list__header">
            {%- content_for 'block', type: '_product-list-content', id: 'static-header' -%}
            </div>
            <div class="mySwiper swiper" id="swiper-{{section.id}}">
            <div class="product-main-swiper swiper-wrapper">
               {% if section.settings.collection != blank and section.settings.collection.products.size > 0 %}
                   {% for product in section.settings.collection.products limit: section.settings.max_products  %}
                    <div class="swiper-slide">
                        {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: product %}
                    </div>
                  {% endfor %}

                {% else %}
                  <h1>No products present in the collection.....</h1>
               {% endif %}
            </div>
            {% if section.settings.show_pagination %}
            <div class="swiper-pagination"></div>
            {% endif %}
            </div>
    </div>  
</section>


<style>
    .product-swiper-section.page-width{
    max-width: 1500px !important;
    }
    .product-swiper-wrapper{
    margin-bottom: {{ section.settings.margin_bottom_desktop }};
    padding-top: {{ section.settings.padding_top_desktop }} ;
    padding-bottom: {{ section.settings.padding_bottom_desktop }} ;
    }
    
    .section-resource-list__header  {
      display: flex;
      justify-content: center;
    }

    .product-swiper-title>.product-swiper-heading{
    font-size: 36px;
    text-align: center;
    }
    .product-swiper-title>.product-swiper-sub-heading{
    font-size: 22px;
    text-align: center;
    }
    .swiper {
    width: 100%;
    }
  @media(max-width:768px){
      .product-swiper-wrapper{
      margin-bottom: {{ section.settings.margin_bottom_tablet }};
      padding-top: {{ section.settings.padding_top_desktop }} ;
      padding-bottom: {{ section.settings.padding_bottom_desktop }} ;
      }
      .product-swiper-title>.product-swiper-heading{
      font-size: 24px;
      }
      .product-swiper-title>.product-swiper-sub-heading{
      font-size: 16px;
      }
  }
  @media(max-width:400px){
      .product-swiper-wrapper{
      margin-bottom: {{ section.settings.margin_bottom_mobile }};
      padding-top: {{ section.settings.padding_top_desktop }} ;
      padding-bottom: {{ section.settings.padding_bottom_desktop }} ;
      }
  }
  .mySwiper {
    width: 100%;
    overflow: hidden;
    height: 100%;
  }
  .swiper-slide {
    height: auto;
  }
  .swiper-pagination-bullet-active{
    width: 20px;
    border-radius: 10px;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", ()=>{
    var swiper = new Swiper('#swiper-{{section.id}}', {
    slidesPerView: 3,
    spaceBetween: 30,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
  });
  })
</script>

{% schema %}
{
  "name": "Product Swiper Carousel",
  "class": "product-swiper-section",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    },
    {
      "type": "_divider"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 1,
